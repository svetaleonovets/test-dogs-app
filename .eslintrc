{
  "extends": "airbnb",
  "rules": {
    "func-names": ["error", "never"],
    "react/prefer-stateless-function": [1, { "ignorePureComponents": true }],
    "jsx-a11y/anchor-is-valid": [ "off", {
      "components": [ "Link" ],
      "specialLink": [ "hrefLeft", "hrefRight" ],
      "aspects": [ "noHref", "invalidHref", "preferButton" ]
    }]
  }
}